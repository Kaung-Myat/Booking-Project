<!-- include header -->
<%- include('include/_header.ejs')  %>

<style>
    body{
        overflow-x: hidden;
        background:#8AF9EB;
    }
</style>
</head>
<body>
<div class="container" >
    <div class="row mb-3">
        <div class="col-md-6 m-auto">
            <div class="card">
                <img class="card-img-top" src="/img/coverPng.png" alt="">
            </div>
        </div>
    </div>
    <div class="row g-0 mb-3">
    
        <div class="col-md-6 m-auto">
            <div class="card mb-3">
                <div class="card-body ms-2">
                    <p class="" style="font-weight: bold;">Admin PhoneNumber : <%= admin.phNo %> </p>
                </div>
            </div>
            <div class="card">
                <div class="card-title">
                    <h3 class="text-center mt-2"><%= admin.description_title %></h3>
                </div>
                <hr>
                <div class="card-body ms-2">        
                    <p class="card-text text-center"><%= admin.description %></p>
                    <hr>
                    <p class="card-text">start date:<%= admin.start_time %></p>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-0">
            <div class="col-md-6 p-0 m-auto mb-2">
                <div class="card">
                    <div class="card-body">
                        <% if(admin != null) {%> 
                        <% if(admin.limit == std_qty) {%>
                            <div class="card-body">
                                <p class="card-text text-center h3">Limitation Full</p>
                            </div>
                        <% }else{%>
                        <form action="/student" method="post" class="ms-2 me-2 mt-2">
                            <input type="hidden" name="category_id" value="<%=admin._id%>">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" name="name" class="form-control" required  autocomplete="off">
                            </div>
                            <div class="mb-3">
                                <label for="mail" class="form-label">Mail</label>
                                <input type="email" name="mail" class="form-control" placeholder="eg.example@gmail.com" required autocomplete="off">
                            </div>
                            <div class="mb-3">
                                <label for="phNumber" class="form-label">Phone Number</label>
                                <input type="number" name="phNumber" class="form-control" required autocomplete="off">
                            </div>
                            <div class="mb-3">
                                <label for="year" class="form-label">Academic Year</label>
                                <input type="text" name="year" class="form-control" placeholder="eg.first year"  required  autocomplete="off">
                            </div>
                            <button  type="submit"  class="btn btn-primary mb-2">Submit</button>
                        </form>
                        <% } %>
                        <% }else{%>
                            <div class="card-body">
                                <p class="card-text text-center h3">No category avalible</p>
                            </div>
                        <% } %>   
                    </div>
                </div> 
            </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
